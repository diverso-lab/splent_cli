FROM python:3.13
WORKDIR /workspace

COPY {{ product_name }}/ {{ product_name }}/

ENV PIP_ROOT_USER_ACTION=ignore
RUN pip install --no-cache-dir --root-user-action=ignore -e ./{{ product_name }}
RUN pip install ./{{ product_name }}[dev]

RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc libc-dev python3-dev libffi-dev build-essential curl mariadb-client \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Node.js
RUN curl -fsSL https://deb.nodesource.com/setup_23.x | bash - \
    && apt-get install -y --no-install-recommends nodejs \
    && npm install -g npm@11 npx \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

EXPOSE 5000
